<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title" >

    <PreferenceCategory
        android:key="status_bar_general_category"
        android:title="@string/general_string" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="status_bar_brightness_control"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:title="@string/status_bar_toggle_brightness" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="double_tap_sleep_gesture"
            android:title="@string/status_bar_double_tap_to_sleep_title" />

        <ListPreference
            android:dialogTitle="@string/status_bar_battery_title"
            android:entries="@array/entries_status_bar_battery"
            android:entryValues="@array/values_status_bar_battery"
            android:key="status_bar_battery"
            android:title="@string/status_bar_battery_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_network_stats"
        android:title="@string/network_traffic_title" >
    
        <CheckBoxPreference
            android:key="status_bar_show_network_stats"
            android:title="@string/status_bar_show_network_stats_title"
            android:summary="@string/status_bar_show_network_stats_summary"
            android:defaultValue="false" />

        <com.android.settings.rascarlo.SeekBarPreference
            android:key="network_stats_update_frequency"
            android:title="@string/status_bar_network_stats_update_title"
            android:summary="@string/status_bar_network_stats_update_summary"
            android:max="2500"
            settings:interval="50"
            settings:min="250"
            settings:unitsLeft=""
            settings:unitsRight="ms"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="status_bar_network_hide"
            android:title="@string/hide_network_speed"
            android:summary="@string/hide_network_speed_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_clock_category"
        android:title="@string/status_bar_clock_title">

        <CheckBoxPreference
            android:key="status_bar_show_clock"
            android:title="@string/status_bar_show_clock_title"
            android:defaultValue="true" />

        <ListPreference
            android:key="status_bar_am_pm"
            android:dialogTitle="@string/status_bar_am_pm_title"
            android:title="@string/status_bar_am_pm_title"
            android:entries="@array/entries_status_bar_am_pm"
            android:entryValues="@array/values_status_bar_am_pm" />

    </PreferenceCategory>
 
    <PreferenceCategory
        android:key="status_bar_quick_settings_category"
        android:title="@string/status_bar_quick_settings_category" >

        <ListPreference
            android:entries="@array/quick_pulldown_entries"
            android:entryValues="@array/quick_pulldown_values"
            android:key="quick_pulldown"
            android:persistent="false"
            android:title="@string/quick_pulldown_title" />
    </PreferenceCategory>

</PreferenceScreen>
